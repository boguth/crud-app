<div id="header">
  <form method="GET" action="/sessions/new" id="login-button">
    <input type="submit" value="Login">
  </form>

  <% if session[:user_id] != nil %>
  <form method="POST" action="/sessions" id="logout-button">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Logout">
  </form>
  <% end %>
</div>
